<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_loan_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:id="@+id/main_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textView_nPay_id"
            android:layout_width="30dp"
            style="@style/loanTextViewRvData"
            android:text="N." />

        <TextView
            android:id="@+id/textView_pay_date_id"
            style="@style/loanTextViewRvData"
            android:text="Paym. Date" />

        <TextView
            android:id="@+id/textView_beg_balance_id"
            style="@style/loanTextViewRvData"
            android:text="Beg.Balance" />

        <TextView
            android:id="@+id/textView_sch_payment_id"
            style="@style/loanTextViewRvData"
            android:text="Sch.Payment" />

        <TextView
            android:id="@+id/textView_principal_id"
            style="@style/loanTextViewRvData"
            android:text="Principal" />

        <TextView
            android:id="@+id/textView_interests_id"
            style="@style/loanTextViewRvData"
            android:text="Interest" />

        <TextView
            android:id="@+id/textView_end_balance_id"
            style="@style/loanTextViewRvData"
            android:text="End.Balance" />

        <TextView
            android:id="@+id/textView_cum_interests_id"
            style="@style/loanTextViewRvData"
            android:text="Cum.Interests" />

    </LinearLayout>

</android.support.v7.widget.CardView>